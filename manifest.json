{
  "manifest_version": 2,
  "name": "ChromeCast",
  "version": "1.0.2",
  "description": "__MSG_extDesc__",
  "background": {
	 "persistent": true,
	 "page": "player.html"
  },
  /*"browser_action": {
    "default_icon": "icon.png",
    "default_popup":"popup.html"    
  }*/
  "app": {
    "launch": {
        "local_path":"feeds.html"
      }
    },
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "optional_permissions": [
    "http://*/*"
  ],
  "default_locale":"en",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}